@model Quiz

@{
    ViewData["Title"] = "Rozwiązywanie quizu: " + Model.Title;
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="@Url.Action("SubmitAnswers", "Quizs")">
    <input type="hidden" name="quizId" value="@Model.Id" />

    @foreach (var question in Model.Questions)
    {
        <div>
            <h4>@question.Description</h4>

            @foreach (var answer in question.Answers)
            {
                <label>
                    <input type="radio" name="selectedAnswerIds[@question.Id]" value="@answer.Id" />
                    @answer.Description
                </label>
                <br />
            }
        </div>
    }

    <button type="submit">Zapisz odpowiedzi</button>
</form>
