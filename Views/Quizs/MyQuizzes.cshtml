@model List<Quiz>

@{
    ViewData["Title"] = "My Quizzes";
}

<div class="text-center">
    <h2>My Quizzes</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Completion Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.Title</td>
                        <td>@quiz.Description</td>
                        <td>@ViewBag.QuizCompletionCounts[quiz.Id]</td>
                        <td>
                            <a asp-action="Details" asp-controller="Quizs" asp-route-id="@quiz.Id">Details</a>
                            <a asp-action="Edit" asp-controller="Quizs" asp-route-id="@quiz.Id">Edit</a>
                            <a asp-action="Delete" asp-controller="Quizs" asp-route-id="@quiz.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No quizzes created yet.</p>
    }
</div>
